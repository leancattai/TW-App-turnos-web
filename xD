  (function() {
    const el = document.getElementById('siteLogo');
    if (!el) return;
    const mq = window.matchMedia('(prefers-color-scheme: dark)');
    const apply = () => { el.src = mq.matches ? el.dataset.dark : el.dataset.light; };
    ['dark','light'].forEach(m => { const i=new Image(); i.src = el.dataset[m]; });
    apply();
    mq.addEventListener?.('change', apply);
  })();
  </script>
</body>
</html>
